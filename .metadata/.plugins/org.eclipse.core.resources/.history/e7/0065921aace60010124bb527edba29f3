package com.ripplesystem.foobar.command;

import java.util.HashMap;

import com.ripplesystem.foobar.model.StoreInfo;

public class FBGetStoreListForDevice extends FBCommand
{	
	private String deviceId;
	
	public FBGetStoreListForDevice()
	{
		super(FBCommandType.GetStoreListForDevice);
	}
	
	public String getDeviceId() { return deviceId; }
	public void setDeviceId(String value) { deviceId = value; }
	
	public class Response extends FBCommandResponse
	{
		public static final int FAILCODE_DEVICE_NOT_FOUND = 1;
		
		private HashMap<StoreInfo,Integer> storePointsInfo;
		
		public Response(boolean isSuccess)
		{
			super(isSuccess);
		}
		
		public HashMap<StoreInfo,Long> getStorePointsInfo() { return storePointsInfo; }
		public void setStorePointsInfo(HashMap<StoreInfo,Long> value) { storePointsInfo = value; }
	}
}
