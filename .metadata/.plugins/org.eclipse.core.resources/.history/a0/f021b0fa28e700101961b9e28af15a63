package com.ripplesystem.foobar.command;

import com.ripplesystem.foobar.model.ShopInfo;

public class FBGetShopInfo extends FBCommand
{
	private long storeKey;
	
	public FBGetShopInfo()
	{
		super(FBCommandType.GET_SHOP_INFO);
	}
	
	public long getStoreKey() { return storeKey; }
	public void setStoreKey(long value) { storeKey = value; }
	
	public class Response extends FBCommandResponse
	{
		public static final int FAILCODE_STORE_NOT_FOUND = 1;
		
		private ShopInfo storeInfo;
		
		public Response(boolean success)
		{
			super(success);
		}
		
		public ShopInfo getStoreInfo() { return storeInfo; }
		public void setStoreInfo(ShopInfo value) { storeInfo = value; }
	}
}
