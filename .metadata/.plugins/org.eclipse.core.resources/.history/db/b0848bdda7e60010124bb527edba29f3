package com.ripplesystem.foobar.model;

import java.util.Date;

import javax.jdo.annotations.*;

/**
 * Represents the data model for point balance that user has with the store.
 * @author yizumi
 *
 */
@PersistenceCapable(identityType = IdentityType.APPLICATION, detachable = "true")
public class PositionInfo
{
	@PrimaryKey
    @Persistent(valueStrategy = IdGeneratorStrategy.IDENTITY)
	@Extension(vendorName="datanucleus",key="gae.encoded-pk",value="true")
	private String encodedKey;
	@Persistent
	private UserInfo userInfo;
	@Persistent
	private Long storeKey;
	@Persistent
	private int redeemToken;
	@Persistent
	private int balance = 0;
	@Persistent
	private Date redeemTokenExpiration;
	
	public String getEncodedKey() { return encodedKey; }
	
	public UserInfo getUserInfo() { return userInfo; }
	public void setUserInfo(UserInfo value) { userInfo = value; }
	
	public Long getStoreKey() { return storeKey; }
	public void setStoreKey(Long value) { storeKey = value; }
	
	public int getRedeemTokenIndex() { return redeemToken; }
	public void setRedeemTokenIndex(int value) { redeemToken = value; }
	
	public int getBalance() { return balance; }
	public void setBalance(int value) { balance = value; }

	public Date getRedeemTokenExpiration() { return redeemTokenExpiration; }
	public void setRedeemTokenExpiration(Date value) { redeemTokenExpiration = value; }
}
